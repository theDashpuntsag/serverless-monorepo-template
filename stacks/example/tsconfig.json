{
  "extends": "@custom-repo/ts-configs/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*", "test/**/*", "serverless.ts", "**/*.mts", "eslint.config.mts", "vitest.config.ts"],
  "exclude": ["dist", "node_modules", ".serverless", "coverage"]
}
